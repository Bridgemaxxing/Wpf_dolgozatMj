<Window x:Class="elso.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:elso"
        mc:Ignorable="d"
        Title="Struktúra használata" Height="330" Width="300">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">

        <TextBlock Text="Szám1"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="20 20 0 0"
                   FontSize="16"/>
        <TextBox Name="tbx_szam1"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Height="20"
                 Width="120"
                 FontSize="16"
                 Margin="20 50 0 0"/>
        <TextBlock Text="Szám2"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="160 20 0 0"
                   FontSize="16"/>
        <TextBox Name="tbx_szam2"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Top"
                 Height="20"
                 Width="120"
                 FontSize="16"
                 Margin="0 50 20 0"/>

        <TextBlock Text="Mértani közép"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="20 100 0 0"
                   FontSize="16"/>

        <TextBox Name="tbx_mertanikoz"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Height="20"
                 Width="200"
                 FontSize="16"
                 Margin="20 130 0 0" />

        <TextBlock Text="Számtani közép"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="20 160 0 0"
                   FontSize="16"/>
        
        <TextBox Name="tbx_szamtanikoz"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Height="20"
                 Width="200"
                 FontSize="16"
                 Margin="20 190 0 0"/>


        <Button Name="btn_szamol"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Height="25"
                Width="140"
                Margin="0 250 20 0"
                Content="Számol"
                FontSize="16" Click="btn_szamol_Click"/>



    </Grid>
</Window>

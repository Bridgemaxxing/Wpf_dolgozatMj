<Window x:Class="masodik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:masodik"
        mc:Ignorable="d"
        Title="MainWindow" Height="330" Width="300">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <TextBlock Text="Kalkulátor adatai"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="40 20 0 0"
                   FontSize="16"/>
        <TextBlock Text="1.adat"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="40 50 0 0"
                   FontSize="16"/>
        <TextBox Name="tbx_szam1"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Height="20"
                 Width="120"
                 FontSize="16"
                 Margin="140 50 0 0"/>
        <TextBlock Text="2.adat"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="40 80 30 0"
                   FontSize="16"/>
        <TextBox Name="tbx_szam2"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Height="20"
                 Width="120"
                 FontSize="16"
                 Margin="140 80 20 0"/>

        <TextBlock Text="műveleti jel"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="40 110 0 0"
                   FontSize="16"/>

        <TextBox Name="tbx_muveletiJel"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Height="20"
                 Width="120"
                 FontSize="16"
                 Margin="140 110 0 0" />

        <TextBlock Text="Művelet eredménye"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="20 160 0 0"
                   FontSize="16"/>

        <TextBox Name="tbx_eredmeny"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Height="20"
                 Width="200"
                 FontSize="16"
                 Margin="20 190 0 0"/>


        <Button Name="btn_szamol"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Height="25"
                Width="140"
                Margin="0 250 20 0"
                Content="Számol"
                FontSize="16" Click="btn_szamol_Click"/>

    </Grid>
</Window>
